@model IEnumerable<BulkyBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container">

    <div class="row p-4">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-end ">
            <a asp-controller="Category" asp-action="Create"  class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>
                Create Category
            </a>
        </div>
    </div>
    <table class="table  table-bordered table-striped ">
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Display order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="30%" class="text-center">
                        <a class="btn btn-primary" style="width:100px" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a class="btn btn-danger" style="width:100px" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
