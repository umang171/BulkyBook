@model BulkyBook.Models.CoverType

<div class="container mt-4 p-3 border">

    <div class="row mb-2">
        <h2 class="text-primary">Edit Cover Type</h2>
        <hr/>
    </div>  
    <form method="POST" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="mb-2">
            <label asp-for="Name"></label>
            <input type="text" disabled asp-for="Name" class="form-control"/>
        </div>       
        <button type="submit" style="width:150px" class="btn-danger btn p-2" >Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary p-2">Back to Cover Type List</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}