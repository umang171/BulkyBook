@model IEnumerable<BulkyBook.Models.Product>
@{
    ViewData["Title"] = "Product Page";
}
<div class="row pb-3 p-1">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 col-12 px-3 pb-2">
            <div class="row border border-2 border-dark p-2">
                <div class="card">
                    <img src="@product.ImageUrl" style="height:350px" class="rounded card-img-top">
                </div>
                <div class="pl-1">
                    <p class="card-title h5 text-primary">@product.Title</p>
                    <p class="card-title text-info">By <b>@product.Author</b></p>
                </div>
                <div class="pl-1">
                    <p>List Price: <b><strike>Rs.@product.ListPrice.ToString("0.00")</strike></b></p>
                    <p>As low as: <b>Rs.@product.ListPrice.ToString("0.00")</b></p>
                </div>
                <div>
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                </div>
            </div>
        </div>
    }
</div>
